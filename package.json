{
  "name": "100-days-of-web-development-ecwoc26",
  "version": "1.0.0",
  "description": "Repository for 100 Days of Web Development",
  "main": "index.js",
  "scripts": {
    "lint:js": "eslint .",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",

    "perf:audit": "node tools/performance-audit.js",
    "perf:images": "node tools/image-optimizer.js",
    "perf:report": "node tools/image-optimizer.js report",
    "lighthouse": "lighthouse http://localhost:3000 --only-categories=performance --output=json --output-path=./lighthouse-report.json",

    "lint:fix": "eslint . --fix && stylelint \"**/*.css\" --fix",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,json,md}\"",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.56.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "htmlhint": "^1.1.4",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.html": [
      "htmlhint",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}